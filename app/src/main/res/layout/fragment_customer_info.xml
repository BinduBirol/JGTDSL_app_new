<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerInfoFragment">




        <TableLayout android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Customer ID" android:textSize="20sp"/>
                <TextView android:id="@+id/cid" android:text="Name" android:textSize="20sp"/>
            </TableRow>

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Customer name" android:textSize="20sp"/>
                <TextView android:id="@+id/name" android:text="Name" android:textSize="20sp"/>
            </TableRow>

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Address" android:textSize="20sp"/>
                <TextView android:id="@+id/address" android:text="Name" android:textSize="20sp"/>
            </TableRow>

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Mobile no" android:textSize="20sp"/>
                <TextView android:id="@+id/mobile" android:text="Name" android:textSize="20sp"/>
            </TableRow>

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Category" android:textSize="20sp"/>
                <TextView android:id="@+id/category" android:text="Name" android:textSize="20sp"/>
            </TableRow>

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Connection date" android:textSize="20sp"/>
                <TextView android:id="@+id/condate" android:text="Name" android:textSize="20sp"/>
            </TableRow>

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Metered status" android:textSize="20sp"/>
                <TextView android:id="@+id/ismetered" android:text="Name" android:textSize="20sp"/>
            </TableRow>

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Burner info" android:textSize="20sp"/>
                <TextView android:id="@+id/burners" android:text="Name" android:textSize="20sp"/>
            </TableRow>

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Regional office" android:textSize="20sp"/>
                <TextView android:id="@+id/area_name" android:text="Name" android:textSize="20sp"/>
            </TableRow>


        </TableLayout>




</androidx.core.widget.NestedScrollView>