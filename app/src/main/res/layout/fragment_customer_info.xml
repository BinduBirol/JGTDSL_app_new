<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerInfoFragment">




        <TableLayout android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Customer ID"/>
                <TextView android:id="@+id/cid" android:text="Name"/>
            </TableRow>

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Customer name"/>
                <TextView android:id="@+id/name" android:text="Name"/>
            </TableRow>

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Address"/>
                <TextView android:id="@+id/address" android:text="Name"/>
            </TableRow>

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Mobile no"/>
                <TextView android:id="@+id/mobile" android:text="Name"/>
            </TableRow>

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Category"/>
                <TextView android:id="@+id/category" android:text="Name"/>
            </TableRow>

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Connection date"/>
                <TextView android:id="@+id/condate" android:text="Name"/>
            </TableRow>

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Metered status"/>
                <TextView android:id="@+id/ismetered" android:text="Name"/>
            </TableRow>

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Burner info"/>
                <TextView android:id="@+id/burners" android:text="Name"/>
            </TableRow>

            <TableRow android:paddingBottom="10dp">
                <TextView android:paddingRight="5dp" android:text="Regional office"/>
                <TextView android:id="@+id/area_name" android:text="Name"/>
            </TableRow>


        </TableLayout>




</androidx.core.widget.NestedScrollView>